<?xml version="1.0" encoding="utf-8"?><!-- Mini Player (Peek Content) -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mini_player_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mini_player_height"
    android:background="@color/md_theme_navigationBarBackground">

    <!-- Main content container -->
    <LinearLayout
        android:id="@+id/mini_player_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mini_progress_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- RecyclerView for song items with swipe support -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mini_player_recycler_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:overScrollMode="never"
            tools:listitem="@layout/item_mini_player" />

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/mini_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/margin_12"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play"
            app:tint="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Progress bar at bottom -->
    <ProgressBar
        android:id="@+id/mini_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar_mini"
        android:visibility="gone" />

</RelativeLayout> 